<div class='show'>

    <h2><%= @restaurant.name %></h2>
    <br>

    <h5>Address:</h5>
    <p class='info'><%= @restaurant.address %></p>
    <br>

    <h5>Category:</h5>
    <p class='info'><%= @restaurant.category.capitalize %></p>
    <br>

    <%= link_to "Create review", new_restaurant_review_path(@restaurant), class: 'btn btn-outline-primary' %>
    <br>
    
    <h4>Reviews:</h4>
    
    <% @restaurant.reviews.each do |review| %>
        <div class='rating'>
        <h6>Content: <%= review.content %></h6>
        <h6>Rating: <%= review.rating %></h6>
        </div>
    <% end %>
   
    <br>
</div>